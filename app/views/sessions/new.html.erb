<% content_for :title, 'Bible Points - Login' %>

<div class="row">
  <div class="col">
    <h1 class="text-center">Log in</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-xs-12">
    <%= simple_form_for :session do |f| %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :remember_me, as: :boolean, inline_label:  'Log in to my account automatically on this device' %>
        <%= f.button :submit, 'Log in'  %>
    <% end %>
  </div>
</div>
<% if flash.any? %>
  <div class="row" style="margin-top: 10px">
  <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-xs-12">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>">
          <%= value %>
        </div>
    <% end %>
  </div>
  </div>
<% end %>
